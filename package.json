{
  "name": "sau",
  "private": true,
  "version": "0.1.0",
  "description": "SAU: NFT 생성과 동시에 자동 접근 제어가 설정되는 탈중앙화 영구 저장 및 콘텐츠 플랫폼",
  "license": "MIT",
  "scripts": {
    "predev": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "hardhat": "hardhat",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy-unified.ts --network localhost",
    "deploy:localnet": "hardhat run scripts/deploy-unified.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy-unified.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy-unified.ts --network mainnet",
    "deploy:sepolia": "hardhat run scripts/deploy-unified.ts --network sepolia",
    "sau:start": "npm run restart && npm run dev",
    "sau:dev": "npm run dev",
    "sau:build": "npm run build",
    "sau:test": "npm run test:eth",
    "sau:deploy": "npm run deploy:localnet",
    "sau:restart": "taskkill /f /im node.exe 2>nul || echo 'No node processes found' && timeout /t 2 /nobreak >nul && start powershell -NoExit -Command \"cd '$PWD'; npx hardhat node\" && timeout /t 5 /nobreak >nul && start powershell -NoExit -Command \"cd '$PWD'; npm run dev\"",
    "clean:all": "rmdir /s /q node_modules .next dist cache artifacts typechain-types 2>nul || echo 'Clean completed'",
    "sau:setup": "npm run setup-env",
    "sau:help": "echo 'SAU Platform Commands: start, dev, build, test, deploy, restart, clean, setup'",
    "sau:linux": "bash scripts/sau.sh",
    "test:env": "npx tsx scripts/test-env-keys.ts",
    "check:arweave": "npx tsx scripts/check-arweave-balance.ts",
    "verify:service-wallet": "npx tsx scripts/verify-service-wallet.ts",
    "verify:env": "npx tsx scripts/verify-env-setup.ts",
    "sau:linux:start": "bash scripts/sau.sh start",
    "sau:linux:dev": "bash scripts/sau.sh dev",
    "sau:linux:build": "bash scripts/sau.sh build",
    "sau:linux:test": "bash scripts/sau.sh test",
    "sau:linux:deploy": "bash scripts/sau.sh deploy",
    "sau:linux:restart": "bash scripts/sau.sh restart",
    "sau:linux:clean": "bash scripts/sau.sh clean",
    "sau:linux:setup": "bash scripts/sau.sh setup",
    "sau:linux:help": "bash scripts/sau.sh help",
    "setup-env": "powershell -ExecutionPolicy Bypass -File scripts/setup-environment.ps1",
    "setup-env:linux": "bash scripts/setup-environment.sh",
    "setup-testnet": "powershell -ExecutionPolicy Bypass -File scripts/setup-testnet.ps1",
    "setup-testnet:linux": "bash scripts/setup-testnet.sh",
    "check-ports": "powershell -ExecutionPolicy Bypass -File scripts/check-ports.ps1",
    "check-ports:linux": "bash scripts/check-ports.sh",
    "test:eth": "powershell -ExecutionPolicy Bypass -File scripts/run-eth-tests.ps1",
    "test:eth:linux": "bash scripts/run-eth-tests.sh",
    "test:eth:ether": "powershell -ExecutionPolicy Bypass -File scripts/run-eth-tests.ps1 ether",
    "test:eth:gas": "powershell -ExecutionPolicy Bypass -File scripts/run-eth-tests.ps1 gas",
    "test:eth:integration": "powershell -ExecutionPolicy Bypass -File scripts/run-eth-tests.ps1 integration",
    "test:eth:gas-report": "powershell -ExecutionPolicy Bypass -File scripts/run-eth-tests.ps1 all -GasReport",
    "test:eth:verbose": "powershell -ExecutionPolicy Bypass -File scripts/run-eth-tests.ps1 all -Verbose",
    "restart": "npm run sau:restart",
    "restart:all": "npm run sau:restart"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@irys/sdk": "^0.2.11",
    "@lit-protocol/auth-helpers": "^6.4.0",
    "@lit-protocol/contracts-sdk": "^6.4.0",
    "@lit-protocol/core": "^6.4.0",
    "@lit-protocol/encryption": "^6.4.0",
    "@lit-protocol/lit-node-client": "^6.4.0",
    "@lit-protocol/types": "^6.4.0",
    "@rainbow-me/rainbowkit": "^2.0.0",
    "@tanstack/react-query": "^5.0.0",
    "arweave": "^1.15.7",
    "fast-uri": "^3.1.0",
    "got": "^11.8.6",
    "multer": "^1.4.5-lts.1",
    "multiformats": "^9.9.0",
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "viem": "^2.0.0",
    "wagmi": "^2.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomicfoundation/ignition-core": "^0.15.13",
    "@openzeppelin/contracts": "5.0.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "20.11.30",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "chai": "^4.5.0",
    "dotenv": "16.4.5",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.5",
    "ethers": "^6.15.0",
    "hardhat": "^2.27.0",
    "hardhat-gas-reporter": "^1.0.10",
    "is-symbol": "^1.1.1",
    "pino-pretty": "^13.1.2",
    "solidity-coverage": "0.8.12",
    "ts-node": "10.9.2",
    "typechain": "^8.3.2",
    "typescript": "5.4.5"
  }
}
